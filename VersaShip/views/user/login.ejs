<% layout('boilerplate') %>

<div class="card mx-auto" style="width: 25rem">
  <img src="/images/bgHome.jpg" class="card-img-top" alt="..." />
  <div class="card-body" style="color: azure">
    <form
      class="needs-validation"
      method="post"
      action="/user/login"
      novalidate
    >
      <div class="mb-3"></div>
      <label for="username" class="form-label">Username</label>
      <input
        type="text"
        class="form-control"
        id="username"
        aria-describedby="username"
        name="username"
        required
      />
      <div class="valid-feedback">Looks good!</div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          required
        />
      </div>
      <div class="valid-feedback">Looks good!</div>

      <div style="display: flex; align-items: center; justify-content: center">
        <button type="submit" class="btn btn-secondary">Log in</button>
      </div>

      <p style="color: azure; display: flex; justify-content: center">
        Don't have an account? <a href="/user/register"> SignUp</a>
      </p>
    </form>
  </div>
</div>

<style>
  body {
    height: 100vh;
    background-image: linear-gradient(rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.5)),
      url("/images/bgHome.jpg");
    background-size: cover;
    background-position: center;
    text-shadow: 0 0.05rem 0.1rem rgba(0, 0, 0, 0.5);
    box-shadow: inset 0 0 5rem rgba(0, 0, 0, 0.5);
  }

  .card {
    background: linear-gradient(rgb(0, 66, 101), rgb(20, 20, 20));
    color: beige;
  }

  .btn {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100px;
    height: 40px;
    margin-top: 8px;
    margin-bottom: 18px;
    text-align: center;
    color: rgb(0, 0, 0);
    background-color: rgba(255, 255, 255, 0.521);
    border-radius: 4px;
  }

  .card {
    transition: box-shadow 0.3s ease;
  }

  .card:hover {
    box-shadow: 0 4px 10px rgba(0, 128, 255, 0.5);
  }

  .btn-secondary {
    color: #ffffff;
    text-shadow: none;
    background-color: rgb(0, 42, 69);
  }

  .btn-secondary:hover {
    background-color: white;
    color: rgb(0, 53, 84);
    box-shadow: aqua;
  }
</style>
