<% layout('boilerplate') %>

    <% for(r of orders) {%>
        <div class="card mx-auto <%= r.status=='Delivered'?" border-success":" border-danger" %> mb-3"
            style="max-width:
            55rem;
            display: flex;
            justify-content: center;">
            <div class="card-header">
                <%= r.status=="Delivered" ?r.status:r.status+" (Pending)" %>
            </div>
            <div class="card-body">
                <p>Ordered products:
                <ul>
                    <% for(product of r.product){ %>
                        <li>
                            <%= product %>
                        </li>
                        <% } %>
                </ul>
                </p>
                <hr>
                <p>Total Price: <%= r.price %>
                </p>
                <hr>
                <p>Delivery Address: <%= r.address %>
                </p>
            </div>
        </div>
        <% } %>