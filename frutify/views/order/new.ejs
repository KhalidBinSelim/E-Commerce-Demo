<% layout('boilerplate') %>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Sl No</th>
                <th scope="col">Product</th>
                <th scope="col">Price/item</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total</th>
            </tr>
        </thead>
        <tbody>
            <% addedProducts.forEach((product,i)=> { %>
                <tr>
                    <th scope="row">
                        <%= i+1 %>
                    </th>
                    <td>
                        <%= product.name %>
                    </td>
                    <td>
                        <%= product.price %>
                    </td>
                    <td>
                        <%= product.quantity %>
                    </td>
                    <td>
                        <%= product.price * product.quantity %>
                    </td>
                </tr>
                <% }); %>
                    <tr>
                        <th colspan="4" scope="row">Total</td>
                        <td>
                            <%= totalPrice %>TK
                        </td>
                    </tr>
        </tbody>
    </table>
    <% if(totalPrice){ %>

        <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal" style="margin-left: 170px;">
            Proceed
        </button>

        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <!-- <h1 class="modal-title fs-5" id="exampleModalLabel">You're only a step way</h1> -->
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/order" method="POST" class="needs-validation" novalidate>

                            <div style="display: flex; justify-content: center; flex-direction: column;">
                                <div class="mb-3">
                                    <label for="address" class="form-label">Address</label>
                                    <input type="text" class="form-control" id="address" name="address" required>
                                </div>
                                <div class="mb-3">
                                    <label for="phone" class="form-label">Phone</label>
                                    <input type="text" class="form-control" id="phone" name="phone">
                                </div>
                                <button class="btn btn-secondary">Checkout</button>
                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <form class="d-inline" action="/order?_method=delete" method="post" style="margin-right: 170px;">
            <button class="btn btn-danger">Empty</button>
        </form>
        <% }else{ %>
            <h1 class="text-center">Your cart is empty</h1>
            <% } %>