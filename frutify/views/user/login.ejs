<% layout('boilerplate') %>

<div class="card" style="width: 18rem; height: 28rem; margin: 1px auto 10px">
  <img src="/images/wallpaper_4.jpg" class="card-img-top" alt="..." />
  <div
    class="card-body"
    style="
      color: whitesmoke;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    "
  >
    <form
      class="needs-validation"
      method="post"
      action="/user/login"
      novalidate
    >
      <div class="mb-3"></div>
      <label for="username" class="form-label">Username</label>
      <input
        type="text"
        class="form-control"
        id="username"
        aria-describedby="username"
        name="username"
        required
      />
      <div class="valid-feedback">Looks good!</div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          required
        />
      </div>
      <div class="valid-feedback">Looks good!</div>
      <div style="display: flex; justify-content: center">
        <button type="submit" class="btn btn-secondary">Sign in</button>
      </div>
      <p class="mt-0 mb-0" style="color: whitesmoke">
        Don't have an account?
        <a href="/user/register" style="color: rgb(0, 163, 232)">SignUp</a>
      </p>
    </form>
  </div>
</div>

<style>
  body {
    height: 100vh;
    background-image: linear-gradient(rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.5)),
      url("/images/wallpaper_4.jpg");
    background-size: cover;
    background-position: center;
    text-shadow: 0 0.05rem 0.1rem rgba(0, 0, 0, 0.5);
    box-shadow: inset 0 0 5rem rgba(0, 0, 0, 0.5);
  }

  .container {
    margin-top: 0px;
    align-items: center;
  }

  .mt-5 {
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  .card {
    background: linear-gradient(rgb(108, 108, 108), rgb(29, 29, 29));
    color: whitesmoke;
    transition: box-shadow 0.3s ease;
  }

  .btn {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100px;
    height: 40px;
    margin-top: 8px;
    margin-bottom: 18px;
    text-align: center;
    color: rgb(0, 0, 0);
    background-color: rgba(255, 255, 255, 0.521);
    border-radius: 4px;
  }

  .card:hover {
    box-shadow: 0 4px 10px rgba(0, 128, 255, 0.5);
  }

  .btn-secondary {
    color: #ffffff;
    text-shadow: none;
    background-color: rgb(55, 55, 56);
  }

  .btn-secondary:hover {
    background-color: white;
    color: rgb(0, 0, 0);
    box-shadow: aqua;
  }
</style>
