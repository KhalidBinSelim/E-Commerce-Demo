<% layout('boilerplate') %>


<div class="order-title">
    <h3>Order History</h3>
  </div>

<div class="container">
    <% for(r of orders) {%>
        <div class="card mx-auto <%= r.status=='Delivered'?" border-success":" border-primary" %> mb-3"
            style="max-width:
            35rem;">
            <div class="card-header">
                <%= "Product Delivered" %>
                    <span class="badge rounded-pill text-bg-success">Payment Completed</span>
            </div>
            <div class="card-body">
                <div style="font-size: 1.4rem;">
                    <p style="color: rgb(2, 255, 15); text-align: center; margin: 0.1px auto 0.1px;">Paid Amount : <%= r.price %> TK</p></div>
            </div>
            <hr>
                <p><h6 style="text-align: center;">Delivered products :</h6>
                <ul>
                    <% for(product of r.product){ %>
                        <li> <em>
                            <%= product %>
                        </em>
                        </li>
                        <% } %>
                </ul>
            </p>
                
                
        </div>
        <% } %>
</div>

   



<Style>

.order-title {
    background: radial-gradient(circle, rgb(0, 113, 173), rgb(0, 43, 65));
    max-width: 160vw;
    text-align: center;
    color: beige;
    padding-top: 2px;
    padding-bottom: 2px;
    margin-bottom: 2px;
    border-radius: 5px;
}

body {
  height: 100vh;
  background-image: linear-gradient(rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.5)),
    url("/images/bgHome.jpg");
  background-size: cover;
  background-position: center;
  text-shadow: 0 0.05rem 0.1rem rgba(0, 0, 0, 0.5);
  box-shadow: inset 0 0 5rem rgba(0, 0, 0, 0.5);
}

.container {
    max-width: 160vw;
    overflow-y: auto;
}

.card {
    background: linear-gradient(rgb(0, 66, 101), rgb(20, 20, 20));
    color: beige;
}
    .card:hover {
    box-shadow: 0 4px 10px rgba(0, 128, 255, 0.5);
  }
    .card-header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        font-size: 1.4rem;
        padding-top: 20px;
        padding-bottom: 20px;
    }
    .card-body {
        display: flex;
        justify-content: center;
        flex-direction: column;
        /* font-size: 1.2rem; */
        margin-top: 15px;
        margin-bottom: 0.1px;
    }
</Style>